<div id="main-container" class="container">
<% if current_user.provider == 'facebook' %>
<div>
  <%= form_for @user,:html => {:class => "form center"} do |f| %>
    <div class="form-group">
    <%= image_tag current_user.image, width:"100", height:"100" %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email , disabled: true%>
    </div>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.email_field :name , disabled: true%>
    </div>

    </div>
  <% end %>
</div>
<% else %>
  <%= render 'editform' %>
<% end %>

</div>
