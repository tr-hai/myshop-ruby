<div id="main-container" class="container">
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Image:</strong>
  <%= link_to image_tag(@article.image.url(:large)), @article.image.url %>
</p>
<h2>Comments</h2>
<%= render @article.comments %>


<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>
