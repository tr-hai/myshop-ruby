<div id="main-container" class="container">
<h1>Listing my articles</h1>

<%= link_to 'New article', new_article_path, class: 'btn btn-success'  %>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Status</th>
    <th>Image</th>
  </tr>
  <% @user.articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <% if article.status == 0 %>
        <td>Public</td>
      <% else%>
        <td>Private</td>
      <% end%>
      <td><%= link_to image_tag(article.image.url(:med)), article.image.url %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-xs'  %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-xs'  %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs'  %></td>
    </tr>
  <% end %>
</table>
</div>
